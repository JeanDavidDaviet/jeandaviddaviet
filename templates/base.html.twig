<!doctype html>
<html class="no-js no-touch" lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <meta name="description" content="J'aide les organisations de petites et moyennes tailles à développer leur projets internets.">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('img/favicon/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('img/favicon/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('img/favicon/favicon-16x16.png') }}">
    <link rel="manifest" href="{{ asset('site.webmanifest') }}">
    <link rel="mask-icon" href="{{ asset('img/favicon/safari-pinned-tab.svg') }}" color="#5bbad5">

    <!-- TODO GENERATE FEED (COMPOSER ?) -->
    <link rel="alternate" type="application/atom+xml" href="/feed/atom" title="RSS feed">
    <link rel="alternate" type="application/rss+xml" href="/feed" title="RSS feed">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="theme-color" content="#ffffff">

    <link rel="stylesheet" href="{{ asset('css/main.min.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <header class="wrapper--narrow header">
        <div class="row">
            {% block header %}{% endblock %}
            <nav class="navbar">
                <ul class="navbar__list row">
                    <li class="navbar__item"><a href="{{ path('page', { slug: 'developpement-sites-wordpress' }) }}" class="navbar__link">WordPress</a></li>
                    {#<li class="navbar__item"><a href="{{ path('page', { slug: 'developpement-sites-woocommerce' }) }}" class="navbar__link">WooCommerce</a></li>#}
                    <li class="navbar__item"><a href="{{ path('page', { slug: 'blog' }) }}" class="navbar__link">Blog</a></li>
                    <li class="navbar__item"><a href="{{ path('page', { slug: 'portfolio' }) }}" class="navbar__link">Portfolio</a></li>
                </ul>
            </nav>
        </div>
    </header>
    {% block body %}{% endblock %}
    {% block javascripts %}{% endblock %}
</body>
</html>