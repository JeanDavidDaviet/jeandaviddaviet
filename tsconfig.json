{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "outDir": "./assets/js",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true // besoin pour gsap
  }
}
